<div class="container">

    <form action="/login">
        <h3 class="mt-3 mb-3">Sign-in</h3>
        <!-- 조건문이 참일 경우 -->
        {{#if msg}}
            <div class="alert alert-danger">
                <strong>{{msg}}</strong><!-- msg 데이터 바인딩되는 곳 --> 
            </div>
        {{/if}}
        
        <div class="form-group">
            <label class="font-weight-bold" for="exampleInputEmail1">아이디</label>
            <input type="email" class="form-control" name="user_id" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{email}}"
                   placeholder="email"><!-- email 데이터 바인딩되는 곳 --> 
            <small id="emailHelp" class="form-text text-muted">본인 컴퓨터에서만 기억하기를 설정하세요.</small>
        </div>
        <div class="form-group">
            <label class="font-weight-bold" for="exampleInputPassword1">비밀번호</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <div class="form-group form-check">
            <input type="checkbox" name="chk_remember" class="form-check-input" id="exampleCheck1" {{isChecked}}><!-- isChecked 데이터 바인딩되는 곳 --> 
            <label class="form-check-label" for="exampleCheck1">아이디 기억하기</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
